<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>Wheel Design</title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="./styles.css">
    </head>
    <body onload= "renderWheel()">
        <div> 
            <input type="text" id="Save" placeholder="Name of wheel here">
            <input type="button" id="SaveButton" value="Save" onclick="saveButton()"> 
            <input type="text" id="Load" placeholder="Name of wheel here">
            <input type="button" id="LoadButton" value="Load" onclick="loadButton()"> 
        </div>
        <div id= "Wheel">
            Wheel Parameters
            <li id = "liWheel"></li>
        </div>
        <input type="text" id="WheelSetter" placeholder="Set Wheel Diameter"><br>
        <input type="button" id="WheelSetter" value="Set Diameter" onclick="setWheelDiameter()"><br>
        <br>
        <br>
        <br>
        <div id = "Hub">
            Hub Parameters
            <li id= "liHub"></li>
        </div>
        <input type="text" id="HubSetter" placeholder="Set Hub Diameter"><br>
        <input type="button" id="HubSetter" value="Set Diameter" onclick="setHubDiameter()"><br>
        <br>
        <br>
        <br>
        <div id= "Spokes">
            Spokes Parameters
            <li id="liNumberOfSpokes"></li>
            <li id="liSpokesLength"></li>
            <li id="liSpokesAngle"></li>
        </div>
        <input type="button" onclick="addSpoke()" value="+">
        <input type="button" onclick="removeSpoke()" value="-">
    </body>
    
    <script type="text/javascript" src="../src/WheelRules.js"></script>
    <script type="text/javascript" src="../src/Hub.js"></script>
    <script type="text/javascript" src="../src/Spoke.js"></script>
    <script type="text/javascript" src="../src/Wheel.js"></script>
    <script type="text/javascript" src="../src/loadWheel.js"></script>
    <script type="text/javascript" src="../src/saveWheel.js"></script>
    <script type="text/javascript" src="./WheelRenderer.js"></script>
</html>