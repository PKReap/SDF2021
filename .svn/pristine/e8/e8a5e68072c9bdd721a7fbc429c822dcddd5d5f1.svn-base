<html>
  <body>
    <input id="text" placeholder="type something here"/>
    <button onclick="save();">Save</button>
    <button onclick="load();">Load</button>
    <div>
      enter text, save, quit browser, reopen the file, click load.
    </div>
  </body>
  <script>
    //obviously we will not put script in HTML like this, this is just an example to illustrate saving and loaading
    
    function save() {
      const text = document.getElementById('text').value;
      localStorage.setItem("box", text);
    }
    
    function load() {
      const text = localStorage.getItem("box");
      document.getElementById('text').value = text;
    }
  </script>
</html>