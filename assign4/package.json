{
  "name": "assign4",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "karma start --single-run",
    "cover": "karma start --reporters coverage --single-run",
    "lint": "eslint .",
    "plato": "plato -r -d report src",
    "start": "open GUI/WheelDesigner.html"
  },
  "author": "",
  "license": "ISC",
  "eslintConfig": {
    "globals": {
      "WheelRules": true,
      "Wheel": true,
      "expect": true,
      "sinon": true,
      "Hub": true,
      "Spoke": true,
      "saveWheel": true,
      "loadWheel": true
    },
    "env": {
      "browser": true,
      "node": true,
      "es6": true,
      "mocha": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 9
    },
    "rules": {
      "eqeqeq": "error",
      "strict": "error",
      "no-var": "error",
      "no-unused-vars": [
        "off"
      ],
      "prefer-const": "error",
      "no-console": "off",
      "indent": [
